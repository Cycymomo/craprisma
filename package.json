{
  "name": "nexma",
  "version": "0.1.0",
  "author": "Cyril Moreau <cyril.moreau0804@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "docker-compose up -d --build",
    "stop": "docker stop $(docker ps -a -q) && docker rm $(docker ps -a -q)",
    "clean": "docker rmi $(docker images -q)",
    "deploy-prisma:dev": "cd ./server/prisma && prisma deploy",
    "deploy-prisma:prod": "cd ./server/prisma && prisma deploy -e .env.prod",
    "release": "npm run deploy-prisma:prod && now && now --prod"
  }
}
