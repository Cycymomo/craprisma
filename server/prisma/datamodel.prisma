type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String! @default(value: "")
  posts: [Post!]! @relation(name: "UserPost")
}

type Post {
  id: ID! @id
  title: String!
  content: String
  published: Boolean! @default(value: false)
  author: User! @relation(name: "UserPost")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
